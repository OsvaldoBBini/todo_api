generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id             String         @id @default(uuid()) @db.Uuid
  name           String
  email          String         @unique
  password       String
  profilePicture String         @default("") @map("profile_picture")
  folders        Folders[]
  recoverCodes   RecoverCodes[]

  @@map("users")
}

model RecoverCodes {
  id             String   @id @default(uuid()) @db.Uuid
  email          String   @unique @map("email")
  code           String   @unique
  expirationTime DateTime @map("expiration_time")
  createdAt      DateTime @default(now()) @map("create_at")
  user           Users    @relation(fields: [email], references: [email])

  @@map("recover_codes")
}

model Folders {
  id          String     @id @default(uuid()) @db.Uuid
  userId      String     @map("user_id") @db.Uuid
  name        String
  description String?
  user        Users      @relation(fields: [userId], references: [id], onDelete: Cascade)
  tasks       Tasks[]
  subTasks    SubTasks[]

  @@map("folders")
}

model Tasks {
  id          String     @id @default(uuid()) @db.Uuid
  folderId    String     @map("folder_id") @db.Uuid
  description String
  status      Boolean
  folders     Folders    @relation(fields: [folderId], references: [id], onDelete: Cascade)
  subTasks    SubTasks[]

  @@map("tasks")
}

model SubTasks {
  id          String  @id @default(uuid()) @db.Uuid
  folderId    String  @map("folder_id") @db.Uuid
  taskId      String  @map("task_id") @db.Uuid
  description String
  status      Boolean
  folders     Folders @relation(fields: [folderId], references: [id], onDelete: Cascade)
  tasks       Tasks   @relation(fields: [taskId], references: [id], onDelete: Cascade)

  @@map("subtasks")
}
